{% extends 'base.html.twig' %}
{% trans_default_domain "idp_user" %}

{% block body %}
<div class="ibox">
    <div class="ibox-title">
        <h1>{{ "new.title"|trans({"%idp%": IdP})|raw }}</h1>
    </div>
    <div class="ibox-content">        
        {{ form_start(form) }}
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.givenName) }}
        {{ form_row(form.surName) }}
        {{ form_widget(form) }}
        
        <div class="hr-line-dashed"></div>
        
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
                <a class="btn btn-white" href="{{ path('idpuser_index', {id: IdP.id}) }}">{{ "back_to_list_button"|trans|raw }}</a>
                <input type="submit" class="btn btn-primary" value="{{ "new.create_button"|trans|raw }}" />
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script>
    $(document).on('keyup', '.namePart', function(event) {
        event.preventDefault();
        $('#appbundle_idpuser_displayName').val($('#appbundle_idpuser_givenName').val() + ' ' + $('#appbundle_idpuser_surName').val())
    });
    </script>
{% endblock %}
