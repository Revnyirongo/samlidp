{% extends 'base.html.twig' %}
{% trans_default_domain "federation" %}

{% block body %}
    {{ form_start(form) }}
    <div class="ibox">
        <div class="ibox-title">
            <h1>{{ "index.federation_list_federation_creation"|trans|raw }}</h1>
        </div>
        <div class="ibox-content">
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.slug) }}
            {{ form_row(form.federationUrl) }}
            {{ form_row(form.metadataUrl) }}
            {{ form_row(form.contactName) }}
            {{ form_row(form.contactEmail) }}
            {{ form_row(form.idps) }}
            {{ form_widget(form) }}

            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-2">
                    <a class="btn btn-white" href="{{ path('federation_index') }}">{{ "index.federation_list_backtothelist"|trans|raw }}</a>
                    <input type="submit" class="btn btn-primary" value="{{ "index.federation_new_create_button"|trans|raw }}" />
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
