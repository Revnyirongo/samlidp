{% extends "::base.html.twig" %}
{% trans_default_domain "default" %}
{% block title %}SAML Identity Provider as a Service{% endblock %}

{% block firstbody %}
<div class="wrapper outer-home firstbody">
    <div class="container">
      <div class="col-md-10 col-md-offset-1" style="padding:100px 0;">
        <div style="background: rgba(226, 226, 226, 0.7 );;padding: 30px;border-radius: 10px;">
        <h1>{{ "doc.bigtitle"|trans|raw }}</h1>
        <p class="text-center">{{ "doc.subtitle"|trans|raw }}</p>
        <p class="clearfix text-center"><a role="button" class="btn btn-primary btn-lg" href="{% if is_granted('IS_AUTHENTICATED_FULLY') %}{{ path('app_idp_idplist') }}{% else %}{{ path('fos_user_registration_register') }}{% endif %}">{{ "doc.gettingstarted"|trans|raw }}</a></p>
        </div>
        </div>

    </div>
</div>

<section id="starting" class="container services">
    <div class="row">
        {% block starting %}
        <div class="col-sm-3">
            <h2>{{ "index.ready_title"|trans|raw }}</h2>
            <p>{{ "index.ready_text"|trans|raw }}</p>
        </div>
        <div class="col-sm-3">
            <h2>{{ "index.easy_administration_title"|trans|raw }}</h2>
            <p>{{ "index.easy_administration_text"|trans|raw }}</p>
        </div>
        <div class="col-sm-3">
            <h2>{{ "index.compatibility_title"|trans|raw }}</h2>
            <p>{{ "index.compatibility_text"|trans|raw }}</p>
        </div>
        <div class="col-sm-3">
            <h2>{{ "index.low_fees_title"|trans|raw }}</h2>
            <p>{{ "index.low_fees_text"|trans|raw }}</p>
        </div>
        {% endblock starting %}
    </div>
</section>
<section class="features" id="starting">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="navy-line"></div>
                <h1>{{ "index.how_to_start"|trans|raw }}</h1>
            </div>
        </div>
        <div class="row p-m">
            <div class="col-sm-12 col-md-3 text-center">
                <a href="{{ path('fos_user_registration_register') }}"><i class="fa fa-user-plus fa-3x features-icon"></i></a><p>{{ "index.sign_up"|trans|raw }}</p>
            </div>
            <div class="col-sm-12 col-md-3 text-center">
                <i class="fa fa-key fa-3x features-icon"></i><p>{{ "index.create_idp"|trans|raw }}</p>
            </div>
            <div class="col-sm-12 col-md-3 text-center">
                <i class="fa fa-group fa-3x features-icon"></i><p>{{ "index.add_users"|trans|raw }}</p>
            </div>
              <div class="col-sm-12 col-md-3 text-center">
                <i class="fa fa-rocket fa-3x features-icon"></i><p>{{ "index.register_to_fed"|trans|raw }}</p>
            </div>
        </div>        
        <div class="row">
            
        </div>
        
    </div>

</section>

{% endblock %}

{% block bodywrapper %}

{% endblock %}
